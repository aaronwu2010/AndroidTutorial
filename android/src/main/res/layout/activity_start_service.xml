<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff99e6ff"
    android:orientation="vertical"
    tools:context="com.chen.activity.StartServiceActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="启动形式服务示例"
        android:gravity="center"
        android:textSize="20dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartService"
        android:background="#ffffce00"
        android:text="启动服务" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopService"
        android:background="#ff49ffd1"
        android:text="停止服务" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="绑定形式服务示例"
        android:gravity="center"
        android:textSize="20dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBindService"
        android:background="#ff005bff"
        android:text="绑定服务" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUnbindService"
        android:background="#ff1eff02"
        android:text="取消绑定服务" />


</LinearLayout>
